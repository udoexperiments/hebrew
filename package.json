{
  "name": "hebrew-language-learning-app",
  "version": "2.0.0",
  "description": "A modular Hebrew language learning application",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "start": "npx serve",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"js/**/*.js\" \"css/**/*.css\""
  },
  "keywords": [
    "hebrew",
    "language-learning",
    "education",
    "flashcards"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "serve": "^14.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}